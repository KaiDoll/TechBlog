<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if post.length}} 
  {{!-- MIGHT NEED TO SINGULARIZED IT --}}
  <div class="col-md-6 post-list">
    <h3>Previous Posts:</h3>

    {{#each post as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <p>
        <h4><a href="/post/{{post.id}}">{{post.username}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-primary" data-id="{{post.id}}">Edit</button>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
