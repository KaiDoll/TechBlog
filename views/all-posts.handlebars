<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a> 
      {{!-- Gives option for user to click on the link. Takes them to post/1 which is comment handlebar page--}}
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
  </div> 
  {{!-- If the post.user.name does not work than change the user to username --}}
</div>
{{/each}}