<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.username}}!</h2>
  </div>
</div>

<a href="/dashboard">Back to dashboard</a>

<div class="row mt-4">
  <div class="col-md-6 post-list">
    
    <h3>Update Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}"/>
      </div>
      <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" id="post-content" name="post-content">{{post.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="new-post-form">Update Post</button>
      </div>
      {{!-- Might need to change data-id --}}
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger">DELETE</button>
      </div>
    </form>
  </div>

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>
