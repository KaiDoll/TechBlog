<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{req.session.username}}!</h2>
  </div>
</div>

<a href="/dashboard">Back to dashboard</a>

<div class="row mt-4">
  <div class="col-md-6 post-list">
    
    <h3>Update Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{post.id}}">Update Post</button>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </form>
  </div>

<script src="./js/dashboard.js"></script>
